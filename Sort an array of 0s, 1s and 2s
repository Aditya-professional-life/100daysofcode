    def sort012(self,arr,n):
        # code here
        count0, count1, count2 = 0, 0, 0
    
        for i in range(n):
            if arr[i] == 0:
                count0 += 1
            elif arr[i] == 1:
                count1 += 1
    
        for i in range(count0):
            arr[i] = 0
    
        for i in range(count0, count0 + count1):
            arr[i] = 1
    
        for i in range(count0 + count1, n):
            arr[i] = 2
    	return arr
